					<height>100</height>
					<onup>105</onup>
					<onright>-</onright>
					<onleft>-</onleft>
					<ondown>-</ondown>
					<orientation>horizontal</orientation>
					<offsetx>20</offsetx>
					<offsety>5</offsety>
					<itemlayout width="70" height="90">
						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>50</width>
							<height>50</height>
							<colordiffuse>80FFFFFF</colordiffuse>
							<texture>$INFO[ListItem.Thumb]</texture>
						</control>
					</itemlayout>
					<focusedlayout width="70" height="90">
						<control type="image">
							<visible>Control.HasFocus(1510)</visible>
							<posx>0</posx>
							<posy>0</posy>
							<width>70</width>
							<height>70</height>
							<texture border="15">button_option_menu_on.png</texture>
						</control>
						<control type="image">
							<visible>!Control.HasFocus(1510)</visible>
							<posx>10</posx>
							<posy>10</posy>
							<width>50</width>
							<height>50</height>
							<colordiffuse>80FFFFFF</colordiffuse>
							<texture>$INFO[ListItem.Thumb]</texture>
						</control>
						<control type="image">
							<visible>Control.HasFocus(1510)</visible>
							<posx>10</posx>
							<posy>10</posy>
							<width>50</width>
							<height>50</height>
							<texture>$INFO[ListItem.Thumb]</texture>
						</control>
						<control type="label">
							<visible>Control.HasFocus(1510)</visible>
							<posx>35</posx>
							<posy>74</posy>
							<width>200</width>
							<height>20</height>
							<font>title16b</font>
							<align>center</align>
							<aligny>center</aligny>
							<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
							<textcolor>white</textcolor>
						</control>
					</focusedlayout>
					<content type="action">
						<onclick lang="python"><![CDATA[explc.OnAction()]]></onclick>
					</content>
				</control>
			</control>
		</control>
	</controls>
</window>
